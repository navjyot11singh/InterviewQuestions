<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options"
    android:orientation="vertical"
    android:background="#DAE0E2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7B8788">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interview Questions"
            android:textColor="#fff"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    </android.support.v7.widget.Toolbar>
    <Button
        android:layout_margin="5dp"

        android:background="#fff"
        android:textColor="#000000"
        android:id="@+id/androidButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Questions"
        android:onClick="androidQuestions"
        />
    <Button
        android:layout_margin="5dp"
        android:background="#7B8788"
        android:textColor="#fff"
        android:id="@+id/javaButton"
        android:text="Java Questions"
        android:onClick="javaQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_margin="5dp"
        android:background="#fff"
        android:textColor="#000000"
        android:id="@+id/cButtton"
        android:text="C++ Questions"
        android:onClick="cQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>